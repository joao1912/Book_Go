{
  "name": "book",
  "version": "1.0.0",
  "description": "Site para uma biblioteca.",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:w": "tsx --watch src/index.ts",
    "build": "tsup src",
    "test:unit": "jest --testPathPattern=test",
    "test:unit:orm": "jest ./test/unit/ormRepositories",
    "test:unit:usecases": "jest --testPathPattern=./test/unit/useCases",
    "test:int": "jest ./test/integration/ --runInBand",
    "test:int:book": "jest ./test/integration/routes/book --runInBand",
    "test:int:finance": "jest ./test/integration/routes/finance --runInBand",
    "test:int:reservation": "jest ./test/integration/routes/reservation --runInBand",
    "test:int:stock": "jest ./test/integration/routes/stock --runInBand",
    "test:int:user": "jest ./test/integration/routes/user --runInBand",
    "test:int:comment": "jest ./test/integration/routes/comment --runInBand"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-terminator": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0",
    "ts-jest-resolver": "^2.0.1",
    "tsx": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.27",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.11.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
